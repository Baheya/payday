---
import type { HTMLAttributes } from "astro/types";

interface Props extends Omit<HTMLAttributes<"svg">, "aria-labelledby"> {
  icon: iconName;
  id: string;
}

// prettier-ignore
export type iconName = "overview" | "transactions" | "budgets" | "recurring" | "pots";

const { icon, id, ...props } = Astro.props;

const { default: innerHTML } = await import(
  `../../assets/icons/${icon}.svg?raw`
);
---

<span aria-labelledby={id} set:html={innerHTML} {...props} />
