---
import type { HTMLAttributes } from "astro/types";

interface Props extends Omit<HTMLAttributes<"svg">, "aria-labelledby"> {
  icon: iconName;
  "aria-labelledby": string;
}

// prettier-ignore
export type iconName = "overview" | "transactions" | "budgets" | "recurring" | "pots" | "sort" | "filter" | "chevron-right" | "chevron-left";

const { icon, ...props } = Astro.props;

const { default: innerHTML } = await import(
  `../../assets/icons/${icon}.svg?raw`
);
---

<span set:html={innerHTML} {...props} />
