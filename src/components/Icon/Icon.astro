---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"svg"> {
  icon: iconName;
}

// prettier-ignore
export type iconName = "overview" | "transactions" | "budgets" | "recurring" | "pots" | "sort" | "filter" | "chevron-right" | "chevron-left" | "chevron-down" | "chevron-up";

const { icon, ...props } = Astro.props;

const { default: innerHTML } = await import(
  `../../assets/icons/${icon}.svg?raw`
);
---

<span set:html={innerHTML} {...props} />
